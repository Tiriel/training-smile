{% extends 'base.html.twig' %}

{% block title %}Movie Details: {{ movie.title }}{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Movie : {{ movie.title }}</h1>

    <ul>
        <li>Released : {{ movie.releasedAt|date('Y M d') }}</li>
        <li>Genres : {{ movie.genres|join(', ') }}</li>
    </ul>
    <img src="{{ asset('build/images/31116_JssY.jpeg') }}" alt="titre">
</div>
{% endblock %}
